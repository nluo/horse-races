{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "../js",
    "moduleResolution": "node",
    "rootDir": "./"
  },
  "filesGlob": [
    "./**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
